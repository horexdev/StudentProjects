<Page x:Class="StudentProjects.Pages.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentProjects.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeachersPage">

    <Grid>
        <DataGrid Margin="50, 50" Name="TeachersGrid"/>
        <Button Width="100" Height="35" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50, 0, 0, 8" FontSize="16" Content="Добавить" Style="{DynamicResource DefaultButtonStyle}" Name="AddTeacherButton"/>
        <Button Width="35" Height="35" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="50, 10" Style="{DynamicResource DefaultButtonStyle}" Name="UpdateTableButton">
            <Image Source="../Resources/sinchronize-64.png" Width="24" Height="24"/>
        </Button>
    </Grid>
</Page>
