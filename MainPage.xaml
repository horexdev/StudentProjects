<Page x:Class="StudentProjects.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentProjects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="">

    <Grid>
        <UniformGrid Margin="150, 100">
            <Button Height="50" Width="150" Content="Преподаватели" FontSize="16" Name="OpenTeachersPageButton" Style="{DynamicResource DefaultButtonStyle}"/>
            <Button Height="50" Width="150" Content="Студенты" FontSize="16" Name="OpenStudentsPageButton" Style="{DynamicResource DefaultButtonStyle}"/>
            <Button Height="50" Width="150" Content="Проекты" FontSize="16" Name="OpenProjectsPageButton" Style="{DynamicResource DefaultButtonStyle}"/>
            <Button Height="50" Width="150" Name="OpenStatsPageButton" Style="{DynamicResource DefaultButtonStyle}">
                <TextBlock Text="Баллы и&#xA;премиальные" FontSize="16" FontFamily="Roboto" TextAlignment="Center"/>
            </Button>
        </UniformGrid>
        <Grid Name="LoadingText" Width="300" Height="100" Background="#4285F4" Visibility="Hidden">
            <TextBlock FontSize="56" Text="Загрузка..." Foreground="White" TextAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
